{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "types": ["node", "vite/client"]
  },
  "include": ["src/**/*.js", "tests/**/*.js", "src/**/*.d.ts"],
  "exclude": ["dist", "node_modules"]
}
